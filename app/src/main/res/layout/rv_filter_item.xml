<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/rvFilterParent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="3dp"
    android:clickable="true"
    android:paddingBottom="5dp"
    android:paddingTop="10dp">

    <ImageView
        android:id="@+id/iv_filterItem"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/tv_filterItem"
        android:scaleType="centerCrop"/>

    <ImageView
        android:id="@+id/iv_selectedBar"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/iv_filterItem"
        app:layout_constraintRight_toRightOf="@+id/iv_filterItem"
        app:layout_constraintTop_toTopOf="@+id/iv_filterItem"
        app:layout_constraintBottom_toBottomOf="@+id/iv_filterItem"
        android:background="@drawable/img_select_bar"
        android:visibility="gone"/>


    <TextView
        android:id="@+id/tv_filterItem"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="#FFFFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_filterItem"
        android:gravity="center"/>

</androidx.constraintlayout.widget.ConstraintLayout>